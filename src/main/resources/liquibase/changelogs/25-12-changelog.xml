<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.33.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1765028949297-1"
               author="bethibande">
        <createSequence incrementBy="50"
                        sequenceName="Job_seq"
                        startValue="1"/>
    </changeSet>
    <changeSet id="1765028949297-2"
               author="bethibande">
        <createTable tableName="Job">
            <column name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_job"/>
            </column>
            <column name="type"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="configJson"
                    type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="nextScheduledExecution"
                    type="TIMESTAMPTZ"/>
            <column name="lastSuccessfulExecution"
                    type="TIMESTAMPTZ"/>
            <column name="lockTimeout"
                    type="TIMESTAMPTZ"/>
            <column name="notes"
                    type="VARCHAR(1024)"/>
            <column name="workspace_id"
                    type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="1765044233630-1" author="bethibande">
        <addForeignKeyConstraint baseTableName="Job" baseColumnNames="workspace_id" constraintName="fk_job_on_workspace"
                                 referencedTableName="Workspace"
                                 referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="1765028991169-1" author="bethibande">
        <createIndex tableName="Job" indexName="IDX_job_nextScheduledExecution_lastSuccessfulExecution">
            <column name="nextScheduledExecution"/>
            <column name="lastSuccessfulExecution"/>
        </createIndex>
        <createIndex tableName="Job" indexName="IDX_job_lockTimeout">
            <column name="lockTimeout"/>
        </createIndex>
    </changeSet>

    <changeSet id="1765278575877-1" author="bethibande">
        <addColumn tableName="Job">
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="1767274130907-1" author="bethibande">
        <addColumn tableName="Transaction">
            <column name="dataComponents" type="jsonb"/>
        </addColumn>
    </changeSet>

    <changeSet id="1767343104112-1"
               author="bethibande">
        <createSequence incrementBy="50"
                        sequenceName="RecurringPayment_seq"
                        startValue="1"/>
    </changeSet>
    <changeSet id="1767343104112-2"
               author="bethibande">
        <createTable tableName="RecurringPayment">
            <column name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_recurringpayment"/>
            </column>
            <column name="type"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="wallet_id"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="partner_id"
                    type="BIGINT"/>
            <column name="name"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="amount"
                    type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="asset_id"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="notes"
                    type="VARCHAR(1024)"/>
            <column name="workspace_id"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="cronSchedule"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="notBefore"
                    type="DATETIME"/>
            <column name="notAfter"
                    type="DATETIME"/>
            <column name="status"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="lastTransactionDate"
                    type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="1767343104112-3"
               author="bethibande">
        <addForeignKeyConstraint baseColumnNames="asset_id"
                                 baseTableName="RecurringPayment"
                                 constraintName="FK_RECURRINGPAYMENT_ON_ASSET"
                                 referencedColumnNames="id"
                                 referencedTableName="Asset"/>
    </changeSet>
    <changeSet id="1767343104112-4"
               author="bethibande">
        <addForeignKeyConstraint baseColumnNames="partner_id"
                                 baseTableName="RecurringPayment"
                                 constraintName="FK_RECURRINGPAYMENT_ON_PARTNER"
                                 referencedColumnNames="id"
                                 referencedTableName="Partner"/>
    </changeSet>
    <changeSet id="1767343104112-5"
               author="bethibande">
        <addForeignKeyConstraint baseColumnNames="wallet_id"
                                 baseTableName="RecurringPayment"
                                 constraintName="FK_RECURRINGPAYMENT_ON_WALLET"
                                 referencedColumnNames="id"
                                 referencedTableName="Wallet"/>
    </changeSet>
    <changeSet id="1767343104112-6"
               author="bethibande">
        <addForeignKeyConstraint baseColumnNames="workspace_id"
                                 baseTableName="RecurringPayment"
                                 constraintName="FK_RECURRINGPAYMENT_ON_WORKSPACE"
                                 referencedColumnNames="id"
                                 referencedTableName="Workspace"/>
    </changeSet>
</databaseChangeLog>